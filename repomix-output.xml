                    try {
                        const repliedTo = await dataSource.getRepository(Message).findOneBy({ guid: serializedMsg.replyToGuid });
                        if (repliedTo) {
                            const originalText = repliedTo.universalText?.() ?? "<No Text>";
                            console.log(`   Replied to text: "${originalText}"`);
                        } else {
